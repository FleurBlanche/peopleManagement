<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.activity.ActivityShowActivity">

<com.hjq.bar.TitleBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="活动详情" />

    <ImageView
        android:id="@+id/activity_show_imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/activity_show" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:focusable="false"
                android:text="发起人:" />

            <EditText
                android:id="@+id/activity_show_text_sponsor"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:text="管理员" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="地点:" />

            <EditText
                android:id="@+id/activity_show_text_place"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="上海交大软件学院" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="活动名称:" />

            <EditText
                android:id="@+id/activity_show_text_name"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="测试活动" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="开始时间:" />

            <EditText
                android:id="@+id/activity_show_text_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="2019 12 01 11 53" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="结束时间:" />

            <EditText
                android:id="@+id/activity_show_text_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="2019 12 11 11 53" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/activity_show_text_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="实现厉害那里纽芬兰lalf"
        android:textSize="20sp" />

</LinearLayout>