<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/moment_list_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_head_placeholder" />

            <TextView
                android:id="@+id/moment_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="ME"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/moment_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="第一次来到上海交大，见识到了很多大学的那款并发表哪里看见爆发了可不能来努力大部分了"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/moment_list_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:maxHeight="200dp"
            android:minHeight="200dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/sjtu" />

        <TextView
            android:id="@+id/moment_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2019 - 12 - 10"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            app:srcCompat="@android:drawable/bottom_bar" />

    </LinearLayout>

</RelativeLayout>
